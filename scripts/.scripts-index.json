        "database/migrations/XXX_create_{model}.sql",
        "frontend/src/components/{model}/{Model}List.jsx",
        "frontend/src/components/{model}/{Model}Form.jsx",
        "frontend/src/types/{model}.js",
        "frontend/src/components/{model}/{model}.css"
