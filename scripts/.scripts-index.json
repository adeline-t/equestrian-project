    {
      "name": "add-model.sh",
      "path": "./scripts/add-model.sh",
      "category": "automation",
      "platform": ["macos", "linux"],
      "description": "Interactive model generator (Bash - Production Ready)",
      "usage": "cd scripts && ./add-model.sh",
      "status": "production-ready",
      "dependencies": {
        "system": ["bash", "sed", "awk", "date"],
        "npm": []
      },
      "executable": true,
      "interactive": true,
      "generates": [
        "backend/src/handlers/{model}.js",
        "database/migrations/{timestamp}_create_{model}.sql",
        "frontend/src/components/{model}/{Model}List.jsx",
        "frontend/src/components/{model}/{Model}Form.jsx",
        "frontend/src/components/{model}/{model}.css"
      ],
      "features": [
        "complete-code-generation",
        "colored-output",
        "input-validation",
        "error-handling",
        "production-ready-output"
      ],
      "exitCodes": {
        "0": "Model created successfully",
        "1": "Generation failed"
      }
    },
