frontend/dist/
frontend/dist-dev/
frontend/build/
frontend/.output/
dist/
dist-dev/
build/

# Backend build output (Cloudflare Workers)
backend/.wrangler/
backend/dist/
backend/.dev.*
.wrangler/
worker/
wrangler-output/

# Framework-specific build outputs
.next/
.nuxt/
.cache/
public/
.out/
.storybook-out/

# Vite specific
.vite/

# Parcel cache
.parcel-cache/

# ========================================
# ENVIRONMENT VARIABLES & SECRETS
# ========================================
# Environment files (keep .env.example and .env.*.example)
.env
.env.local
.env.*.local
.env.test

# Project-specific environment files
frontend/.env
frontend/.env.local
frontend/.env.dev
frontend/.env.prod
backend/.env
backend/.env.dev
backend/.env.prod

# Supabase secrets

# ========================================
# CLOUDFLARE WORKERS SPECIFIC
# ========================================
backend/wrangler.toml
cloudflare.toml

# ========================================
# IDE & EDITOR CONFIGURATIONS
# ========================================
# VS Code (keep some configs)
.vscode/*

# JetBrains
.idea/
*.iml

# Vim
*.swo

# Emacs
*.elc

# ========================================
# OPERATING SYSTEM FILES
# ========================================
# macOS
.DS_Store
._*

# Windows
*.url

# Linux

# ========================================
# LOGS & TEMPORARY FILES
# ========================================
logs/
*.log
pids/

# ========================================
# TESTING & COVERAGE
# ========================================
coverage/
.nyc_output/
test-results/

# ========================================
# CACHE DIRECTORIES
# ========================================
.npm
.cache

# ========================================
# DATABASE & SUPABASE SPECIFIC
# ========================================
supabase/.branches/
supabase/.temp/
supabase/logs/
*.dump

# ========================================
# MISC DEVELOPMENT FILES
# ========================================
tmp/
temp/
.local/
*.bak
*.backup
docs/generated/

# Documentation temporary files

# ========================================
# DEPLOYMENT SPECIFIC
